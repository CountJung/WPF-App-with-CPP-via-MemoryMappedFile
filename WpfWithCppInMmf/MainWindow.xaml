<Window x:Class="WPFAppCPPMMF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppCPPMMF"
        mc:Ignorable="d"
        Title="Memory Mapped File Test" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Memory Mapped File Context Test" TextAlignment="Center" Margin="5 5 5 5" Background="LightBlue"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock ToolTip="This will be Changed" TextAlignment="Center" Margin="5 0 5 0" Background="Beige">
                This Will be changed <LineBreak/>
                via CPP Console :)
            </TextBlock>
            <Button Grid.Column="1" Content="Call CPP Console" Foreground="AntiqueWhite" Background="Teal"/>
        </Grid>
    </Grid>
</Window>
